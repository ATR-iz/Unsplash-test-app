<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/shape_image"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="400dp"
    android:layout_width="400dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:background="@color/colorThemeBackgroundPhoto"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/DiamondCut"
        tools:src="@tools:sample/backgrounds/scenic"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

    <ProgressBar
        android:id="@+id/progress_bar_random_photo"
        android:indeterminateTint="@color/colorThemeText"
        android:visibility="gone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"/>

</RelativeLayout>